@using MrUnrealData.Entity
@model Creation
    @{
        ViewBag.Title = "CreationPage";
        Layout = "~/Views/Shared/Layout.cshtml";
    }

    <title>CreationPage</title>
<head>
    <link href="~/src/still/CreationPage.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="detailArea">
            <div class="nameArea">
                <h2>@Model.CreationName</h2>
            </div>
            <div class="picArea" style="">
                <img src="data:image;base64,@Convert.ToBase64String(Model.Image)" alt="Creation Image" />
            </div>
            <div class="infoArea">
                <p>@Model.Description</p>
            </div>
            <div class="byArea">
                <h5>@Model.ArtistName</h5>
            </div>
        </div>
    </div>
    
    <script>
        const imageElement = document.getElementById("detail");
        let index = 0;
        let opacity = 0;
        imageElement.style.opacity = opacity;

        function fade() {
            opacity += 0.01;

            if (opacity > 1) {
                opacity = 1;
            } else {
                imageElement.style.opacity = opacity;
                requestAnimationFrame(fade);
            }
        }
        fade();</script>
</body>
